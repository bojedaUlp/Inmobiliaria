@model WebApplication1.Models.Pago

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_Pago" class="control-label"></label>
                <input asp-for="Id_Pago" readonly class="form-control" />
                <span asp-validation-for="Id_Pago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Contrato" class="control-label"></label>
                <select class="form-control" name="Id_Contrato">
                    @foreach (var item in (IList<Contrato>)ViewBag.Contratos)
                    {
                        @:<option @(item.Id_Contrato == Model.Id_Contrato ? "selected" : "") value="@item.Id_Contrato">@(item.Inmueble.DireccionInm + " " + item.Inquilino.ApellidoI)</option>
                    }
                </select>
                <span asp-validation-for="Id_Contrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
