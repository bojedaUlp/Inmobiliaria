@model WebApplication1.Models.Pago

@{
    ViewData["Title"] = "PagarDeContrato";
}

<h1>Pagar Contrato @ViewBag.Contrato.Inmueble.DireccionInm</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PagarDeContrato">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Id_Contrato" class="control-label"></label>
                <input asp-for="Id_Contrato" asp-route-id="@ViewBag.Id_Contrato" value="@ViewBag.Id_Contrato" readonly class="form-control" />
                <span asp-validation-for="Id_Contrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe"   value="@ViewBag.Contrato.ImporteMensual" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" asp-action="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
